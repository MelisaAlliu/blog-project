{
    "compilerOptions": {
        "include": [
            "resources/**/*.ts",
            "resources/**/*.vue",
            "resources/**/*.d.ts"
        ],
        "target": "es2017",
        "module": "commonjs",

        "paths": {
            "@/*": ["./resources/js/*"]
        },
        "isolatedModules": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
